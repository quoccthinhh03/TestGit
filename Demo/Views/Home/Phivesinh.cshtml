@model Demo.Models.PhiVeSinh

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Đóng Phí Vệ Sinh</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
</head>
<body>
    <div class="container mt-5">
        <h2 class="text-center mb-4">Đóng Phí Vệ Sinh</h2>
        <div class="row justify-content-center">
            <div class="col-md-6">
                <form method="post">
                    <div class="form-group">
                        <label for="MaHocGiaDinh">Mã Hộ Gia Đình</label>
                        <input type="text" id="MaHocGiaDinh" name="MaHocGiaDinh" class="form-control" required>
                    </div>

                    <div class="form-group">
                        <label for="Thang">Tháng</label>
                        <input type="number" id="Thang" name="Thang" class="form-control" required>
                    </div>

                    <div class="form-group">
                        <label for="Nam">Năm</label>
                        <input type="number" id="Nam" name="Nam" class="form-control" required>
                    </div>

                    <button type="submit" class="btn btn-primary btn-block">Đóng Phí</button>
                </form>
                <div class="mt-3">
                    <a href="@Url.Action("Index")" class="btn btn-secondary btn-block">Quay Lại</a>
                </div>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
</body>
</html>
