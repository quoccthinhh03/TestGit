<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Thêm Mới Hộ Gia Đình</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
</head>
<body>
    <div class="container mt-5">
        <h2 class="text-center mb-4">Thêm Mới Hộ Gia Đình</h2>
        <div class="row justify-content-center">
            <div class="col-md-6">
                <form method="post" action="@Url.Action("ThemMoiHocGiaDinh", "Home")">
                    @Html.AntiForgeryToken()

                    <div class="form-group">
                        <label for="MaHocGiaDinh">Mã Hộ Gia Đình</label>
                        <input type="text" id="MaHocGiaDinh" name="MaHocGiaDinh" class="form-control" required>
                    </div>
                    <div class="form-group">
                        <label for="DiaChi">Địa Chỉ</label>
                        <input type="text" id="DiaChi" name="DiaChi" class="form-control" required>
                    </div>

                    <div class="form-group">
                        <label for="TongSoNguoiTrongGiaDinh">Tổng Số Người Trong Gia Đình</label>
                        <input type="number" id="TongSoNguoiTrongGiaDinh" name="TongSoNguoiTrongGiaDinh" class="form-control" required>
                    </div>

                    <div class="form-group">
                        <label for="ThongTinLienHe">Thông Tin Liên Hệ</label>
                        <input type="text" id="ThongTinLienHe" name="ThongTinLienHe" class="form-control" required>
                    </div>

                    <button type="submit" class="btn btn-primary btn-block">Thêm Mới</button>
                </form>
                <div class="mt-3">
                    <a href="@Url.Action("Index", "Home")" class="btn btn-secondary btn-block">Quay Lại</a>
                </div>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
</body>
</html>
