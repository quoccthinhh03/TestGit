@model Demo.Models.DongGopPhi

@{
    ViewBag.Title = "Thêm mới đóng góp phí";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Thêm mới đóng góp phí</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
</head>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="form-group">
                    @Html.LabelFor(model => model.MaHocGiaDinh, htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.MaHocGiaDinh, new { htmlAttributes = new { @class = "form-control", placeholder = "Mã hộ", required = "required" } })
                    @Html.ValidationMessageFor(model => model.MaHocGiaDinh, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.LoaiDongGop, htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.LoaiDongGop, new { htmlAttributes = new { @class = "form-control", placeholder = "Nhập loại đóng góp", required = "required" } })
                    @Html.ValidationMessageFor(model => model.LoaiDongGop, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.SoTien, htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.SoTien, new { htmlAttributes = new { @class = "form-control", placeholder = "Nhập số tiền", required = "required", type = "text" } })
                    @Html.ValidationMessageFor(model => model.SoTien, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.NgayDongGop, htmlAttributes: new { @class = "control-label" })
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="far fa-calendar-alt"></i></span>
                        </div>
                        @Html.EditorFor(model => model.NgayDongGop, new { htmlAttributes = new { @class = "form-control", type = "date", required = "required" } })
                    </div>
                    @Html.ValidationMessageFor(model => model.NgayDongGop, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-success btn-block">Thêm mới</button>
                </div>
                <a href="@Url.Action("Index", "Home")" class="btn btn-primary">Quay lại</a>
            }
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        $(document).ready(function () {
            $('#NgayDongGop').datepicker({
                format: 'yyyy-mm-dd',
                autoclose: true,
                todayHighlight: true
            });
        });
    </script>
}
