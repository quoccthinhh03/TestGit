<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Thêm Mới Người Cư Trú</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
</head>
<body>
    <div class="container mt-5">
        <h2 class="text-center mb-4">Thêm Mới Người Cư Trú</h2>
        <div class="row justify-content-center">
            <div class="col-md-6">
                <form method="post" action="@Url.Action("ThemMoiNguoiCuTru", "Home")">
                    @Html.AntiForgeryToken()
                    <div class="form-group">
                        <label for="MaHocGiaDinh">Mã Hộ Gia Đình</label>
                        <input type="text" id="MaHocGiaDinh" name="MaHocGiaDinh" class="form-control" required>
                    </div>
                    <div class="form-group">
                        <label for="SoLuongNguoi">Số Lượng Người Trong Gia Đình</label>
                        <input type="number" id="SoLuongNguoi" name="SoLuongNguoi" class="form-control" required>
                    </div>

                    <div id="ThongTinNguoiCuTru"></div> <!-- Đây là nơi để JavaScript thêm các trường nhập thông tin người cư trú -->

                    <button type="submit" class="btn btn-primary btn-block">Thêm Mới</button>
                </form>
                <div class="mt-3">
                    <a href="DanhSachNguoiCuTru" class="btn btn-secondary btn-block">Quay Lại</a>
                </div>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    <script>
        // JavaScript để tạo các trường nhập thông tin cho từng người cư trú dựa trên số lượng người trong gia đình
        $(document).ready(function () {
            $('#SoLuongNguoi').change(function () {
                var count = $(this).val();
                var html = '';
                for (var i = 1; i <= count; i++) {
                    html += '<div class="form-group">';
                    html += '<label for="HoTen' + i + '">Họ và Tên Người Thứ ' + i + '</label>';
                    html += '<input type="text" id="HoTen' + i + '" name="HoTen' + i + '" class="form-control" required>';
                    html += '</div>';
                    html += '<div class="form-group">';
                    html += '<label for="Tuoi' + i + '">Tuổi Người Thứ ' + i + '</label>';
                    html += '<input type="number" id="Tuoi' + i + '" name="Tuoi' + i + '" class="form-control" required>';
                    html += '</div>';
                    html += '<div class="form-group">';
                    html += '<label for="GioiTinh' + i + '">Giới Tính Người Thứ ' + i + '</label>';
                    html += '<input type="text" id="GioiTinh' + i + '" name="GioiTinh' + i + '" class="form-control" required>';
                    html += '</div>';
                    html += '<div class="form-group">';
                    html += '<label for="MoiQuanHe' + i + '">Mối Quan Hệ Với Chủ Hộ Người Thứ ' + i + '</label>';
                    html += '<input type="text" id="MoiQuanHe' + i + '" name="MoiQuanHe' + i + '" class="form-control" required>';
                    html += '</div>';
                }
                $('#ThongTinNguoiCuTru').html(html);
            });
        });
    </script>
</body>
</html>
